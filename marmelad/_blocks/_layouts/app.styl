html, body
  margin: 0
  padding: 0

html
  min-height: 100%
  min-height: 100vh

body
  color: #fff
  background-color: #3B1F17

.app
  display: flex
  flex-direction: column
  height: 100%
  height: 100vh

  &__wrapper
    display: flex
    flex-direction: column
    min-height: 100%
    min-height: 100vh

  &__content
    display: flex
    flex: 1 0 auto

  &__main
    flex: 1

.contain
  max-width: 1600px + 15px + 15px
  width: 100%
  padding-right: 15px
  padding-left: 15px
  margin: 0 auto

.button-default
  font-size: 48px
  color: #FFF
  font-family: Arial
  font-weight: 400
  line-height: 1.1
  letter-spacing: -0.5px
  padding: 42px 65px
  background-color: #0095C0
  border: none
  border-radius: 189px
  box-shadow: 0px 0px 36px rgba(255, 255, 255, 0.31)
  cursor: pointer
  display: block
  transition: background-color 0.3s, ease 0.3s

  &:hover
    background-color: lighten(#0095C0, 5%)

  &.button-default--big
    max-width: 600px
    width: 100%
    margin: 0 auto 100px