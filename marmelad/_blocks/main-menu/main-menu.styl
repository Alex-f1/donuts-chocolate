.main-menu
  align-self: flex-end

  &__nav
    ul
      list-style-type: none
      display: flex
      align-items: center
      padding-left: 0
      margin: 0

      li
        margin-right: 60px

        &:last-child
          margin-right: 0

        a
          font-size: 24px
          color: #FFF
          font-family: Arial, sans-serif
          font-weight: 400
          line-height: 1.1
          letter-spacing: -0.5px
          text-decoration: none