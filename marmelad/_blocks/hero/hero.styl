.hero
  padding-bottom: 180px

  &__container
    height: 100vh

  &__img-bg
    width: 2850px
    height: 1165px
    position: absolute
    top: -200px
    left: -345px
    z-index: -1
    background-repeat: no-repeat
    background-size: cover

  &__items
    position: relative

  &__item
    &:nth-child(1)
      & ^[0]
        &__img-mini-1
          right: 1006px
          bottom: -5px
          z-index: 3

    &:nth-child(2)
      & ^[0]
        &__img-mini-1
          top: 265px
          right: auto
          bottom: auto
          left: 285px
          z-index: 3

        &__img-mini-2
          right: 300px
          top: auto
          bottom: -5px

    &:nth-child(3)
      & ^[0]
        &__img-mini-1
          top: 245px
          right: auto
          bottom: auto
          left: 350px
          z-index: 3

        &__img-mini-2
          right: 300px
          bottom: -5px

    &.swiper-slide-active
      & ^[0]
        &__img, &__title, &__img-mini
          opacity: 1

  &__title
    font-size: 200px
    color: #FFF
    font-family: 'Roboto Condensed', sans-serif
    font-weight: 700
    line-height: 0.8
    letter-spacing: -0.5px
    text-transform: uppercase
    text-shadow: 1px 0 0 #000, -1px 0 0 #000, 0 1px 0 #000, 0 -1px 0 #000, 1px 1px #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000
    position: absolute
    top: 330px
    left: 0
    z-index: 5
    opacity: 0
    transition: opacity 0.3s, ease 0.3s

  &__img
    width: 950px
    position: absolute
    top: 200px
    right: 230px
    z-index: 1
    opacity: 0
    transition: opacity 0.3s, ease 0.3s

    img
      max-width: 100%
      height: auto
      vertical-align: top

  &__img-mini
    opacity: 0
    transition: opacity 0.3s, ease 0.3s

    img
      position: absolute
      bottom: 0
      right: 0

  &__pagination
    text-align: left
    max-width: 1600px
    bottom: 70px
    left: 50% !important
    transform: translateX(-50%)

    .swiper-pagination-bullet
      width: 10px
      height: 10px
      background-color: #828282
      margin-right: 20px
      opacity: 1

      &.swiper-pagination-bullet-active
        background-color: #FFF

      &:last-child
        margin-right: 0

      &:hover
        background-color: #FFF