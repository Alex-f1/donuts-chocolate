html, body
  margin: 0
  padding: 0

html
  min-height: 100%
  min-height: 100vh

body
  color: #fff
  background-color: #3B1F17

.app
  display: flex
  flex-direction: column
  height: 100%
  height: 100vh

  &__wrapper
    display: flex
    flex-direction: column
    min-height: 100%
    min-height: 100vh

  &__content
    display: flex
    flex: 1 0 auto

  &__main
    flex: 1

.contain
  max-width: 1600px + 15px + 15px
  padding-right 15px
  padding-left 15px
  margin 0 auto