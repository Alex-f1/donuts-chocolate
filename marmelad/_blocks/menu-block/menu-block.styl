.menu-block
  padding-top: 340px

  &__title
    font-size: 144px
    color: #FFF
    font-family: 'Roboto Condensed', sans-serif
    font-weight: 700
    line-height: 1.1
    letter-spacing: -5px
    text-transform: uppercase
    text-align: center
    margin-bottom: 130px
    text-shadow: 1px 0 0 #000, -1px 0 0 #000, 0 1px 0 #000, 0 -1px 0 #000, 1px 1px #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000

  &__items
    padding-right: 135px
    padding-left: 135px

  &__item
    margin-bottom: 125px

  &__body
    display: flex
    align-items: center

  &__img
    flex: 0 0 255px
    width: 255px
    max-width: 255px
    margin-right: 110px

    img
      max-width: 100%
      height: auto
      vertical-align: top

  &__name
    font-size: 48px
    color: #FFF
    font-family: Arial, sans-serif
    font-weight: 400
    line-height: 1.1
    letter-spacing: -0.5px

  &__price
    margin-top: 30px

  &__button
    margin-left: auto